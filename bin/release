#!/usr/bin/env bash

set -euo pipefail
IFS=$'\n\t'

VERSION="$(cat .version)"
CONTAINER_NAME="contadock"
IMAGE_NAME="nikolaigulatz/contadock"

git tag "$VERSION"
git push origin "$VERSION"

docker tag "${CONTAINER_NAME}:latest" "${REGISTRY_PATH}":latest
docker tag "${CONTAINER_NAME}:${VERSION}" "${REGISTRY_PATH}:${VERSION}"
docker push "${REGISTRY_PATH}:${VERSION}"
docker push "${REGISTRY_PATH}:latest"
